PORT=3001
# Comma-separated list of allowed browser origins for CORS (supports '*' wildcards).
# Examples:
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# CORS_ORIGINS=https://yourapp.vercel.app,https://yourdomain.com
# CORS_ORIGINS=https://*.vercel.app,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Room cleanup intervals/TTLs (all in milliseconds)
# How often the server prunes old rooms
ROOM_CLEANUP_INTERVAL_MS=600000
# Delete waiting rooms older than this (default 12h)
ROOM_WAITING_TTL_MS=43200000
# Delete selection rooms older than this (default 12h)
ROOM_SELECTION_TTL_MS=43200000
# Delete finished rooms older than this (default 2h)
ROOM_FINISHED_TTL_MS=7200000


